<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:ws="http://jax-ws.dev.java.net/spring/core"
       xmlns:wss="http://jax-ws.dev.java.net/spring/servlet"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
        http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd
        http://jax-ws.dev.java.net/spring/core http://jax-ws.dev.java.net/spring/core.xsd
        http://jax-ws.dev.java.net/spring/servlet http://jax-ws.dev.java.net/spring/servlet.xsd"
       default-autowire="byName">
       
       <!-- Tell spring that we may be using Annotations also -->
    <context:annotation-config/>
    <!-- This will enabled autowiring for all the classes present inside the below package -->
    <context:component-scan base-package="com.pets.dog.topdown.soap.impl"/>
   
   <!-- Here we are exposing spring manage web service with below url -->
    <wss:binding url="/dogWebService">
        <wss:service>
            <ws:service bean="#DogSoapWebServiceImpl2">
            </ws:service>
        </wss:service>
    </wss:binding>
       
</beans>       